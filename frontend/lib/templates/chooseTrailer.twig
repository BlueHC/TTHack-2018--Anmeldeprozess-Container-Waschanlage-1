{% extends "baseHTML.twig" %}

{% block body %}
<div class="text-center">
 <form action="generateCleaningForm.php?create" method="post" id="selectTrailertype" name="selectTrailertype" class="form mt-3">
     <div id="section1">
            <div class="form-group mt-5">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Ttype" value="20" id="Ttype20">
                    <label class="form-check-lable" for="Ttype20"><img src="lib/img/truck_20.png" width="175px"></label>
                </div>
            </div>
            <div class="form-group mt-5">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Ttype" value="20+20" id="Ttype20b">
                    <label class="form-check-lable" for="Ttype20b"><img src="lib/img/truck_20_20.png" width="175px"></label>
                </div>
            </div>
            <div class="form-group mt-5 mb-5">
                <div class="form-check">
                    <label class="form-check-lable" for="Ttype40">
                    <input class="form-check-input" type="radio" name="Ttype" value="40" id="Ttype40">
                    <img src="lib/img/truck_40.png" width="175px"></label>
                </div>
            </div>
        </div>
     <div id="section2" class="mx-auto text-center" style="display: none">
     <div class="form-group">
         <label>Total number of chambers</label>
         <br />
         <div class="btn-group" role="group" aria-label="Basic example">
             <div class="form-check">
                 <input class="form-check-input" type="radio" name="amountChamber" id="Chamber1" value="1">
                 <label class="btn btn-success lol" for="Chamber1">1</label>
             </div>
             <div class="form-check">
                 <input class="form-check-input" type="radio" name="amountChamber" id="Chamber2" value="2">
                 <label class="btn btn-success lol" for="Chamber2">2</label>
             </div>
             <div class="form-check">
                 <input class="form-check-input" type="radio" name="amountChamber" id="Chamber3" value="3">
                 <label class="btn btn-success lol" for="Chamber3">3</label>
             </div>
             <div class="form-check">
                 <input class="form-check-input" type="radio" name="amountChamber" id="Chamber4" value="4">
                 <label class="btn btn-success lol" id="LabelChamber4" for="Chamber4">4</label>
             </div>
             <div class="form-check">
                 <input class="form-check-input" type="radio" name="amountChamber" id="Chamber5" value="5">
                 <label class="btn btn-success lol" id="LabelChamber5" for="Chamber5">5</label>
             </div>
             <div class="form-check">
                 <input class="form-check-input" type="radio" name="amountChamber" id="Chamber6" value="6">
                 <label class="btn btn-success lol" id="LabelChamber6" for="Chamber6">6</label>
             </div>
         </div>
         <div class="form-group mt-4">
             <label class="form-check-label" id="LabelNumberPlate" for="NumberPlate">Number plate</label>
             <input class="form-control" type="text" name="NumberPlate" id="NumberPlate" placeholder="Numberplate">
         </div>
         <div class="form-group mt-4">
             <label class="form-check-label" id="LabelTanknumber" for="Tanknumber">Tanknumber</label>
             <input class="form-control" type="text" name="Tanknumber" id="Tanknumber" placeholder="XXXU1234567">
         </div>

     {% endblock %}


{% block footer %}
            <div class="navbar col-md-12 mx-auto sticky-bottom navbar-light bg-light">
                <div class="col-6">
                    <a id="back" class="btn btn-success btn-lg btn-block">back</a>
                </div>
                <div class="col-6">
                    <input  type="submit" class="btn btn-success btn-lg btn-block" value="next">
                </div>
            </div>
         </div>
     </div>
 </form>
</div>



{% endblock %}

{% block script %}
    <script>
        $('#Ttype20').click(function(){
            $("#section1").hide();
            $("#section2").show();
        });

        $('#Ttype20b').click(function(){
            $("#section1").hide();
            $("#section2").show();
        });

        $('#Ttype40').click(function(){
            $("#section1").hide();
            $("#section2").show();
        });

        $('#back').click(function(){
            $("#section1").show();
            $("#section2").hide();
        });

        $('#selectTrailertype input').on('change', function() {
            console.log(this.value);
            switch(this.value){

                case "20":
                    $("#Chamber6").hide();
                    $("#LabelChamber6").hide();
                    $("#Chamber5").hide();
                    $("#LabelChamber5").hide();
                    $("#Chamber4").hide();
                    $("#LabelChamber4").hide();
                    $("#Chamber3").show();
                    $("#Chamber2").show();
                    $("#Chamber1").show();
                    $("#NumberPlate").show();
                    $("#NumberPlate").prop('required',true);
                    $("#LabelNumberPlate").show();
                    $("#Tanknumber").hide();
                    $("#Tanknumber").prop('required',false);
                    $("#LabelTanknumber").hide();
                    break;

                case "20+20":
                    $("#Chamber6").show();
                    $("#LabelChamber6").show();
                    $("#Chamber5").show();
                    $("#LabelChamber5").show();
                    $("#Chamber4").show();
                    $("#LabelChamber4").show();
                    $("#Chamber3").show();
                    $("#Chamber2").show();
                    $("#Chamber1").show();
                    $("#NumberPlate").hide();
                    $("#NumberPlate").prop('required',false);
                    $("#LabelNumberPlate").hide();
                    $("#Tanknumber").show();
                    $("#Tanknumber").prop('required',true);
                    $("#LabelTanknumber").show();
                    break;

                case "40":
                    $("#Chamber6").hide();
                    $("#LabelChamber6").hide();
                    $("#Chamber5").show();
                    $("#LabelChamber5").show();
                    $("#Chamber4").show();
                    $("#LabelChamber4").show();
                    $("#Chamber3").show();
                    $("#Chamber2").show();
                    $("#Chamber1").show();
                    $("#NumberPlate").show();
                    $("#NumberPlate").prop('required',true);
                    $("#LabelNumberPlate").show();
                    $("#Tanknumber").hide();
                    $("#Tanknumber").prop('required',false);
                    $("#LabelTanknumber").hide();
                    break;
            }
        })
    </script>
{% endblock %}