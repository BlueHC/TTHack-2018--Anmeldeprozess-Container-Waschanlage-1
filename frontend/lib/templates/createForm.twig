{% extends "baseHTML.twig" %}

{% block body %}
    <div class="container">
        <div class="row col-md-12 mt-3">
            <div class="panel-group" id="accordion">
                <form method="post" action="jsonEncode.php">
            {% for i in range(1, amountChambermodals) %}
                <div class="card">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ i }}">
                                    Chamber {{ i }}</a>
                            </h4>
                        </div>
                        <div id="collapse{{ i }}" class="panel-collapse collapse{% if i  == "1" %}&nbsp;show{% endif %}">
                            <div class="panel-body">
                                <label>{{ transCoveramount }}</label>
                                <div aria-expanded="true" class="btn-group" role="group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountOneCover.Chamber{{ i }}" value="1">
                                        <label class="btn btn-select lol" id="amountChamber1Label" for="amountOneCover.Chamber{{ i }}">1</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountTwoCover.Chamber{{ i }}" value="2">
                                        <label class="btn btn-select lol" id="amountChamber2Label" for="amountTwoCover.Chamber{{ i }}">2</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountThreeCover.Chamber{{ i }}" value="3">
                                        <label class="btn btn-select lol" id="amountChamber3Label" for="amountThreeCover.Chamber{{ i }}">3</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountFourCover.Chamber{{ i }}" value="4">
                                        <label class="btn btn-select lol" id="amountChamber4Label" for="amountFourCover.Chamber{{ i }}">4</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id   ="amountFiveCover.Chamber{{ i }}" value="5">
                                        <label class="btn btn-select lol" id="amountChamber5Label" for="amountFiveCover.Chamber{{ i }}">5</label>
                                    </div>
                                </div>

                                <label>{{ transWalltype }}</label><br>

                                <div class="btn-group row col-md-12" role="group">
                                <div class="form-check col-6 mx-auto">
                                    <input class="form-check-input" type="radio" name="typeWall.Chamber{{ i }}" id="roughWall.Chamber{{ i }}" value="rough">
                                    <label id="amountChamber6Label" for="roughWall.Chamber{{ i }}"><img width="40px" src="lib/img/wand_rau_2.png"></label>
                                </div>
                                <div class="form-check col-6 mx-auto">
                                    <input class="form-check-input" type="radio" name="typeWall.Chamber{{ i }}" id="smmothWall.Chamber{{ i }}" value="smooth">
                                    <label id="amountChamber7Label" for="smmothWall.Chamber{{ i }}"><img width="40px" src="lib/img/wand_glatt.svg"></label>
                                </div>
                                </div>

                                <label>{{ transWalls }}</label><br>

                                <div class="btn-group row col-md-12" role="group">
                                    <div class="form-check col-6 mx-auto">
                                        <input class="form-check-input" type="radio" name="typeWalls.Chamber{{ i }}" id="evenWall.Chamber{{ i }}" value="even">
                                        <label id="amountChamber8Label" for="evenWall.Chamber{{ i }}"><img width="40px" src="lib/img/wand_gerade.svg"></label>
                                    </div>
                                    <div class="form-check col-6 mx-auto">
                                        <input class="form-check-input" type="radio" name="typeWalls.Chamber{{ i }}" id="curvedWall.Chamber{{ i }}" value="curved">
                                        <label id="amountChamber9Label"><img width="40px" src="lib/img/wand_gebogen.svg"></label>
                                    </div>
                                </div>

                                <label>{{ transLastDischarge }}</label>
                                <div class="mt-3 form-group">
                                    <input class="form-control" type="date">
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endfor %}
                <input type="submit" class="sticky-bottom btn btn-select" value="submit">
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
<script>
jQuery('a').click( function(e) {
jQuery('.collapse').collapse('hide');
});
</script>
{% endblock %}






