{% extends "baseHTML.twig" %}

{% block body %}
    <div class="container">
        <div class="row col-md-12 mt-3">
            <div class="panel-group" id="accordion">
                <form method="post" action="jsonEncode.php">
            {% for i in range(1, amountChambermodals) %}
                <div class="card">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ i }}">
                                    Kammer {{ i }}</a>
                            </h4>
                        </div>
                        <div id="collapse{{ i }}" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <label>{{ transCoveramount }}</label>
                                <div aria-expanded="true" class="btn-group" role="group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountOneCover.Chamber{{ i }}" value="1">
                                        <label class="btn btn-success" id="amountChamber1Label" for="amountOneCover.Chamber{{ i }}">1</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountTwoCover.Chamber{{ i }}" value="2">
                                        <label class="btn btn-success" id="amountChamber2Label" for="amountTwoCover.Chamber{{ i }}">2</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountThreeCover.Chamber{{ i }}" value="3">
                                        <label class="btn btn-success" id="amountChamber3Label" for="amountThreeCover.Chamber{{ i }}">3</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id="amountFourCover.Chamber{{ i }}" value="4">
                                        <label class="btn btn-success" id="amountChamber4Label" for="amountFourCover.Chamber{{ i }}">4</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="amountCover.Chamber{{ i }}" id   ="amountFiveCover.Chamber{{ i }}" value="5">
                                        <label class="btn btn-success" id="amountChamber5Label" for="amountFiveCover.Chamber{{ i }}">5</label>
                                    </div>
                                </div>

                                <label>{{ transWalltype }}</label><br>

                                <div class="btn-group" role="group">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="typeWall.Chamber{{ i }}" id="roughWall.Chamber{{ i }}" value="rough">
                                    <label id="amountChamber6Label" for="typeWall"><img width="40px" src="lib/img/wand_rau_2.svg"><em>&nbsp;Rough</em></label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="typeWall.Chamber{{ i }}" id="smmothWall.Chamber{{ i }}" value="smooth">
                                    <label id="amountChamber7Label" for="amountChamber"><img width="40px" src="lib/img/wand_glatt.svg"><em>&nbsp;Smooth</em></label>
                                </div>
                                </div>

                                <label>{{ transLastDischarge }}</label>
                                <div class="form-group">
                                    <input class="form-control" type="date">
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endfor %}
                <input type="submit" class="sticky-bottom btn btn-select" value="submit">
                </form>
            </div>
        </div>
    </div>
{% endblock %}






